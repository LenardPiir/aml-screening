<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2025/10/28.1" author="Lenard">
        <sql>
            CREATE SCHEMA IF NOT EXISTS aml_screening_schema;
        </sql>
    </changeSet>

    <changeSet id="2025/10/28.2" author="Lenard">
        <createTable tableName="sanctioned_list_names" schemaName="aml_screening_schema">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="full_name" type="varchar(255)"/>
            <column name="created_at" type="bigint"/>
            <column name="updated_at" type="bigint"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
